<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="view_kpi_create_quotation" model="ir.ui.view">
            <field name="name">Create KPI Quotation</field>
            <field name="model">ineco.kpi.create_quotation</field>
            <field name="arch" type="xml">
                <form string="Create Quotation" version="7.0">
                    <header>
                        <button name="create_wizard" string="Create" type="object" class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </header>
                    <group>
                        <field name="year_id" />
                        <field name="category_id" />
                        <field name="date_start" />
                        <field name="date_finish" />
                        <field name="dimension" />
                        <field name="target" />
                    </group>
               </form>
            </field>
        </record>

        <record id="action_kpi_create_quotation" model="ir.actions.act_window">
            <field name="name">Create KPI Quotation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ineco.kpi.create_quotation</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_kpi_create_quotation"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

    	<menuitem name="Auto Create KPI Quotation" 
    	    parent="menu_ineco_kpi_configuration" 
    	    id="menu_kpi_create_quotation" 
    	    sequence="5" 
    	    action="action_kpi_create_quotation"/>
        
